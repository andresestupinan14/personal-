#include<stdio.h>

int main(){
	int C,F,i,j;
	int M[C][F];
	
	printf("Escriba el numero de filas\n");
	scanf("%d",&F);
	printf("Escriba el numero de columnas\n");
	scanf("%d",&C);
	
	for(i=0;i<C;i++){
		for(j=0;j<F;j++){
		
			printf("Escriba el valor de la matriz");
			scanf("%d",&M[i][j]);
		}
	}
	for(i=0;i<C;i++){
		for(j=0;j<F;j++){
			printf("|%d",M[i][j]);
		}
		printf("|\n");
	}
int cont=0;
int suma=0;
float prom=0;	

	for(i=0;i<C;i++){
		for(j=0;j<F;j++){
			if(M[i][j]%2!=0){

				cont++;
				suma=suma+M[i][j];
				prom=(float)suma/cont;
			}
		}
	}
	printf("La suma de los impares es %d\nLa media de los impares es %.2f",suma,prom);

}
