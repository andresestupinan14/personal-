#include<stdio.h>

	int main(){
	int C,F,i,j;
	float prom;	
	int cont=0;
	int sum=0;
	
		printf("Escriba el numero de filas\n");
		scanf("%d",&F);

		printf("Escriba el numero de columnas\n");
		scanf("%d",&C);
			
		int M[F][C];
	
		for(i=0;i<F;i++){
			for(j=0;j<C;j++){
				printf("Escriba el valor de la matriz\n");
				scanf("%d",&M[i][j]);
			}
		}

		for(i=0;i<F;i++){
			for(j=0;j<C;j++){	
				cont++;
				printf("|%d",M[i][j]);
			}
			printf("|\n");
		}
	int max,min;
				max=M[0][0];
				min=M[0][0];
		for(i=0;i<F;i++){
			for(j=0;j<C;j++){

				if(M[i][j]<min){
				min=M[i][j];
				
				}
				if(M[i][j]>max){
				max=M[i][j];
				}
				
			}
		}
		printf("El valor maximo es %d\nEl valor minimo es %d\n",max,min);
	for(i=0;i<F;i++){
		for(j=0;j<C;j++){
		
			sum=sum+M[i][j];
		}
	}
	prom=(float)sum/cont;
	printf("La media de todos los elementos de la matriz es %.1f",prom);
}
