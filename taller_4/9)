#include <stdio.h>
#include <stdlib.h>
 
 int main(){
 	int num;
 	
 	printf("escriba");
 	scanf("%d",&num);
 	
 	switch (num){
 		case 1:
 			int A, B, C;
			printf("Escriba el primer numero: \n");
			scanf("%d",&A);
			printf("Escriba el segundo numero: \n");
			scanf("%d",&B);
			printf("Escriba el tercer numero: \n");
			scanf("%d",&C);
	
				if((A>B&&B>C)||(A<B&&B<C)){
					printf("El numero del medio es %d",B);
					
			} else if ((B>C&&C>A)||(B<C&&C<A)){
					printf("El numero del medio es %d",C);	
						
			}else if((C>A&&A>B)||(C<A&&A<B)){
					printf("El numero del medio es %d",A);
					
				} else {
						printf("Dos numeros ingresados son iguales");
			}
			break;
 			
 		case 2:	
 		
			int A1, B1, C1, S1;
			
			printf("Escriba el primer valor \n");
			scanf("%d",&A1);
			printf("Escriba el segundo valor \n");
			scanf("%d",&B1);
			printf("Escriba el tercer valor \n");
			scanf("%d",&C1);
				
			if(A1+B1==C1){
				printf("La suma de %d mas %d es igual a %d ",A1,B1,C1);
			}else if(B1+C1==A1){
				printf("La suma de %d mas %d es igual a %d ",B1,C1,A1);
			}else if(A1+C1==B1){
				printf("La suma de %d mas %d es igual a %d ",A1,C1,B1);
			}else {
				printf("La suma de dos numeros no es como resultando el tercero.");
			}
	
	break;
	
	case 7:
		int cuadrado,suma,cuenta=1;
 	 
 	 while (cuenta<101){
 	 	cuadrado=cuenta*cuenta;
 	 	suma+=cuadrado;
 	 	printf("%d %d \n",cuenta,cuadrado);	
		cuenta++;
	  }
 			printf("%d \n",suma);
 	return 0;
 		
 		
 			
 		
	 } 
 		
 			
			 
 			

return 0;
 }
