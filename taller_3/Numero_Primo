#include <stdio.h>
#include <stdlib.h>

int main(){ 

int n,i, primo=1;
	printf("escriba un numero");
	scanf("%d",&n);
	if(n==2){
		printf("el numero es primo");
	} else if (n % 2 == 0)	{
		primo=0;

			for (int i = 3; i * i <= n; i += 2) {
     	   if (n % i == 0) {
       	   primo=0;
       	     break;
    	    }
	   	}

	}
if (primo==0){
	printf("el numero no es primo");
} else {
	printf("el numero es primo");
}

return 0;
}
