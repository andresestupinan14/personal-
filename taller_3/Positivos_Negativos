#include <stdio.h>
#include <stdlib.h>

int main(){
int positivo,negativo;
float numero;
positivo=0;
negativo=0;
  printf("ingrese numeros (finalice con 0)\n");
			
do
	{scanf("%f",&numero);
	if (numero>0){
					positivo++;
			}else if (numero<0) {
					negativo++;
				}
		
 	 }while (numero !=0 );
  
	
	printf("la cantidad de numeros negativos son %d\n",negativo);
	printf("la cantidad de numeros positivos son %d",positivo);
return 0;
}
