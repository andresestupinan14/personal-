#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int num1, num2, num3, max, min;
	
	printf("escriba el primer valor");
	scanf("%d",&num1);
	printf("escriba el segundo valor");
	scanf("%d",&num2);
	printf("escriba el tercer valor");
	scanf("%d",&num3);
	
	min=num1;
	max=num1;
	
	if (num2<num1 && num2<num3){
		printf("el valor minimo es: %d \n",num2);
	}else if (num3<num2 && num3<num2) {
		printf("el valor minimo es: %d\n",num3);
	}else{ 
		printf("el valor minimo es: %d\n",num1);
	}
	if (num2>num1&&num2>num3){
		printf("el valor maximo es: %d",num2);
	}else if (num3>num1&&num3>num2){
		printf("el valor maximo es: %d",num3);
	}else {
		printf("el valor maximo es: %d",num1);
	}
		return 0;
}
